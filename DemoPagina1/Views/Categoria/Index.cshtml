@model IEnumerable<DemoPagina1.Models.categoria>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Codigo Categoria
        </th>
        <th>
            Nombre Categoria
        </th>
        <th>
            Acciones
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.codigocategoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombrecategoria)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.codigocategoria }) |
            @Html.ActionLink("Details", "Details", new { id=item.codigocategoria }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.codigocategoria })
        </td>
